<!doctype html>

<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="My personal portfolio for web development projects and experiments. Also a blog to include reviews, tutorials, entertainment and more!  ">
    <meta name="keywords" content="web developer, professional, .NET, JQuery, HTML,CSS,XML,JavaScript, Thomas Rosales, Website">
    <meta name="author" content="Thomas Rosales">
    <link rel="image_src" href="img/logo.jpg" />
    <link rel="shortcut icon" href="favicon.ico" />
    <title>Thomas Rosales's Web Portal</title>

    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/pure-min.css">
        <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/grids-responsive-min.css">
    <link href="~/css/main.css" rel="stylesheet" />

    <script src="~/js/jquery-2.1.1.min.js"></script>
    <script src="~/js/jquery.shuffleLetters.js"></script>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-68513011-1', 'auto');
        ga('send', 'pageview');

    </script>

    <script>

        $(function () {

            $('.content-subhead').shuffleLetters();
            $('.header h2').shuffleLetters();
            $("#menuTitle").fadeTo(1000, 1);
            $(".header").fadeTo(2000, 1);
            $(".content p").fadeTo(2200, 1);
            $("#about ul").fadeTo(2200, 1);
            
            $(".social-buttons li").css("transform", "scale(1,1)");

            $("#projects").fadeTo(1000, 1);

        });

    </script>

    <style>

        #menuTitle, .header, .content p, #projects, #about ul {
            opacity: 0;
        }
    </style>

    <link href="/img/favicon.ico" rel="icon" type="image/x-icon" />
    <link href="~/css/imageHover.css" rel="stylesheet" />
</head>

<body>

    <div id="layout">

        <!-- Menu toggle -->

        <a href="#menu" id="menuLink" class="menu-link">
            <!-- Hamburger icon -->
            <span></span>
        </a>

        <div id="menu">

            <div class="pure-menu pure-menu-open">

                <a id="menuTitle" class="pure-menu-heading" href="#">@Model.CurrentPage</a>

                <ul id="nav">

                    <li class="menu-item">
                        <a class="@(@Model.CurrentPage == "Home" ? "selected" : "")" href="/">Home</a>
                    </li>

                    @*<li class="menu-item">
                        <a href="blog">Blog</a>
                    </li>*@

                    <li class="menu-item">

                        <a class="@(@Model.CurrentPage == "Projects" || @Model.CurrentPage == "Music"   ? "selected active" : "")" href="#">Portfolio</a>

                        <ul style="display: @(@Model.CurrentPage == "Projects" || @Model.CurrentPage == "Music" ? "block" : "")">
                            <li><a class="@(@Model.CurrentPage == "Projects" ? "selected" : "")" href="projects" >Projects</a></li>
                            <li><a class="@(@Model.CurrentPage == "Music" ? "selected" : "")" href="music" >Music</a></li>
                        </ul>
                    </li>
                    
                    <li class="menu-item">
                        <a class="@(@Model.CurrentPage == "Resources" ? "selected" : "")" href="resources">Cool Stuff</a>
                    </li>

                    <li class="menu-item">
                        <a class="@(@Model.CurrentPage == "About" ? "selected" : "")" href="about">About</a>
                    </li>
                </ul>
            </div>
        </div>


        <div id="main">
            @RenderBody()
        </div>

        <div class="push"></div>

    </div>

    <div class="footer">
        ©
        <script type="text/javascript">
            document.write(new Date().getFullYear());
        </script> Thomas Rosales. All Rights Reserved.
    </div>

    <!-- Script must be here to load DOM properly  -->

    <script src="~/js/ui.js"></script>

    @*@RenderSection("Scripts", required: false)*@
</body>

</html>

