@page
@model AboutModel
@{
    ViewData["Title"] = "About";
}



<style>
    #about ul {
        list-style: none;
        padding: 0;
    }
</style>

<div class="content ">

    <div class="header">
        <h2 style="text-align :left;">Thomas Rosales - About Me</h2>
    </div>

    <br />

    <div id="about" class="pure-g">


        <div class="pure-u-1-1 pure-u-sm-1-3">
            <div id="aboutMePic"></div>

        </div>


        <div class="pure-u-1-1 pure-u-sm-1-2">
            <div style="text-align:center">

                This is my personal site, now built in ASP.NET Core! 
